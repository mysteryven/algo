{
    "compilerOptions": {
        "declaration": true,
        "baseUrl": ".",
        "module": "esnext",
        "target": "es5",
        "esModuleInterop": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "sourceMap": true,
        "moduleResolution": "node",
        "rootDir": ".",
        //    "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "importHelpers": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules",
    ]
}